<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_Primary</item>
        <item name="colorPrimaryDark">@color/color_PrimaryDark</item>
        <item name="colorAccent">@color/color_Accent</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_anormal_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_anormal_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medial_32</item>
    </style>

    <style name="edit">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>


    <style name="box_container">

    </style>

    <style name="text">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="text.title" parent="text">
        <item name="android:textSize">28sp</item>


    </style>



</resources>
